<Window x:Class="TheMovies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies"
        xmlns:viewModel="clr-namespace:TheMovies.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="1020" Width="1020"
        WindowStyle="SingleBorderWindow"
        Background="Transparent">

    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    
    <Border Background="#272537" CornerRadius="20">
        <Grid>

            <!-- Definerer kolonner -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Definerer rækker -->
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Knap lukker programmet -->
            <Button Style="{DynamicResource ButtonStyle1}" Grid.Column="1" 
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Content = "X"
                    FontSize="16"
                    FontWeight="Light"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0"
                    Command="{Binding CloseMainWindowCommand}" />
            
            <!-- Overskrift -->        
            <TextBlock Text="The Movies"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Margin="20,0,0,0"/>

            <StackPanel Grid.Row="1">

                <RadioButton Content="Film"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             IsChecked="True"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding MovieViewCommand}"/>

                <RadioButton Content="Programmer"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding MovieProgramViewCommand}"/>

                <RadioButton Content="Bookinger"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding BookingViewCommand}"/>
            </StackPanel>
            
            <!-- Indhold skifter afhængig af menuvalg -->
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>

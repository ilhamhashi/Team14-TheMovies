<Window x:Class="TheMovies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies"
        xmlns:ViewModel="clr-namespace:TheMovies.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800"
        Background="#272537">
    <Window.DataContext>
        <ViewModel:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        
        <!-- Definerer rækker -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Definerer kolonner -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Overskrift -->
        <Label Content="THE MOVIES"
               Foreground="AliceBlue"
               FontSize="30"
               FontWeight="DemiBold"
               Margin="20,20,20,20"/>

        <!-- Filmliste -->
        <GroupBox Grid.Row="1" 
                  Header="Filmdatabase" 
                  Foreground="AliceBlue" 
                  FontSize="16"
                  Margin="20,20,20,20">
            
            <!-- Listen kan scrolle, hvis den bliver lang -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto">          
                
                <!-- Listbox oversigt over Movies liste -->
                <ListBox ItemsSource="{Binding Movies, UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding SelectedMovie, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Stretch"
                         Background="Transparent"
                         BorderThickness="0">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" Orientation="Vertical">
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Filmtitel: "
                                           FontWeight="Bold" Foreground="AliceBlue"/>
                                    <TextBlock Text="{Binding Path=title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                           Foreground="AliceBlue"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Filmgenre: "
                                           FontWeight="DemiBold" FontSize="14" Foreground="AliceBlue"/>
                                    <TextBlock Text="{Binding Path=genre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                           Foreground="AliceBlue" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Filmvarighed: "
                                           FontWeight="DemiBold" FontSize="14" Foreground="AliceBlue"/>
                                    <TextBlock Text="{Binding Path=movieLength, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                           Foreground="AliceBlue" FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.Column="1" >

            <!-- Tilføj film -->
            <GroupBox
                  Header="Tilføj Film" 
                  Foreground="AliceBlue" 
                  FontSize="16"
                  Margin="20,20,20,20">

                <StackPanel Margin=" 10">
                    <Label Content="Indtast filmtitel: "
                           Foreground="AliceBlue"/>
                    <TextBox Text="{Binding MovieTitle, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Height="20"/>

                    <Label Content="Indtast filmgenre: "
                           Foreground="AliceBlue"/>
                    <TextBox Text="{Binding MovieGenre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Height="20"/>

                    <Label Content="Indtast filmvarighed: "
                           Foreground="AliceBlue"/>
                    <TextBox Text="{Binding MovieLength, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Height="20"/>

                    <Button Content="Tilføj"
                            Command="{Binding AddMovieCommand, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,20,0,0"/>
                </StackPanel>

            </GroupBox>

            <!-- Opdater/Slet film -->
            <GroupBox 
                  Header="Opdater/Fjern Film" 
                  Foreground="AliceBlue" 
                  FontSize="16"
                  Margin="20,20,20,20">

                <StackPanel Margin=" 10">
                    <Label Content="Filmtitel: "
                           Foreground="AliceBlue"/>
                    <TextBox Text="{Binding SelectedMovie.title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Height="20"/>

                    <Label Content="Filmgenre: "
                           Foreground="AliceBlue"/>
                    <TextBox Text="{Binding SelectedMovie.genre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Height="20"/>

                    <Label Content="Filmvarighed: "
                           Foreground="AliceBlue"/>
                    <TextBox Text="{Binding SelectedMovie.movieLength, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Height="20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <Button Content="Opdater"
                            Command="{Binding UpdateMovieCommand, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,20,20,0"/>

                        <Button Content="Fjern"
                            Command="{Binding RemoveMovieCommand, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,20,0,0"/>

                    </StackPanel>

                </StackPanel>
            </GroupBox>

        </StackPanel>
    </Grid>
</Window>
